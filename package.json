{
  "name": "iximi-legacy",
  "version": "1.0.0",
  "description": "Blockchain certification for indigenous Mexican textiles",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "security:audit": "npm audit --audit-level=high",
    "security:check": "npx audit-ci --critical",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:serve": "npx serve docs/",
    "clean": "rm -rf node_modules dist build",
    "reset": "npm run clean && npm ci"
  },
  "keywords": [
    "blockchain",
    "indigenous",
    "textiles",
    "cultural-preservation",
    "social-impact",
    "web3",
    "react",
    "nodejs",
    "solidity",
    "polygon",
    "mexico"
  ],
  "author": {
    "name": "Estefanía Pérez Vázquez",
    "email": "legacyiximi@gmail.com",
    "url": "https://github.com/legacyiximi-afk"
  },
  "contributors": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/legacyiximi-afk/iximi-legacy.git"
  },
  "bugs": {
    "url": "https://github.com/legacyiximi-afk/iximi-legacy/issues"
  },
  "homepage": "https://github.com/legacyiximi-afk/iximi-legacy#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "prisma": "^5.0.0",
    "@prisma/client": "^5.0.0"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.0",
    "nodemon": "^3.0.0",
    "@types/node": "^20.0.0",
    "@types/jest": "^30.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  }
}
