# Application
NODE_ENV=development
APP_NAME="IXIMI Legacy"
APP_VERSION=0.1.0
PORT=3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://iximi_user:iximi_password@localhost:5432/iximi_legacy
DB_HOST=localhost
DB_PORT=5432
DB_NAME=iximi_legacy
DB_USER=iximi_user
